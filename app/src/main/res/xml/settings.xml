<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/string_settings_permission">
        <Preference
            android:key="notification_permission"
            android:title="@string/string_settings_notification_access_permission"/>

        <Preference
            android:title="@string/string_settings_select_apps"
            android:key="background_app"/>
        <!-- for debugging only
                <Preference
                    android:key="hide_notification"
                    android:title="Hide Notification"
                    android:summary="Touch to hide"/>

                <Preference
                    android:key="show_notification"
                    android:title="Show Notification"
                    android:summary="Touch to show"/>
        -->
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/string_settings_source_code">
        <Preference
            android:title="https://github.com/iboalali/sysnotifsnooze">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/iboalali/sysnotifsnooze"/>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/string_settings_support_me_with">
        <Preference
            android:key="small_tip"
            android:title="@string/string_settings_small_donation">

        </Preference>
        <Preference
            android:key="large_tip"
            android:title="@string/string_settings_large_donation">

        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/string_settings_follow_me">
        <Preference
            android:title="@string/string_settings_twitter">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://twitter.com/iboalali"/>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="settings_preference_category"
        android:title="@string/string_settings_settings">

        <Preference
            android:title="@string/string_settings_hide_persistent_notification"
            android:summary="@string/string_settings_hide_persistent_notification_summery">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://play.google.com/store/apps/details?id=com.iboalali.hidepersistentnotifications"/>
        </Preference>

        <SwitchPreference
            android:checked="false"
            android:key="old_way"
            android:title="@string/string_settings_use_old_hiding_method"
            android:summary="@string/string_settings_old_way_summary"/>

        <SwitchPreference
            android:checked="true"
            android:key="hide_icon"
            android:title="@string/string_settings_hide_app_icon_from_launcher" />

    </PreferenceCategory>
</PreferenceScreen>